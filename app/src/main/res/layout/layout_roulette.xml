<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text_persona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <ImageView
        android:id="@+id/img_persona"
        android:layout_width="180dp"
        android:layout_height="201dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text_persona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ruleta_fondo"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content" />

    <ImageView
        android:id="@+id/elem_1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/elem_2"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/elem_3"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/elem_4"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/elem_5"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/elem_6"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <ImageView
        android:id="@+id/aguja_ruleta"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"/>

    <Button
        android:id="@+id/btn_girar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar"
         />
</android.support.constraint.ConstraintLayout>